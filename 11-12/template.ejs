<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <title>Анализ Логов</title>
    <style>
        /* Основные стили */
        body {
            font-family: 'Roboto', Arial, sans-serif;
            margin: 0;
            background-color: #1e1e2f;
            color: #f4f4f4;
            line-height: 1.6;
        }

        h1,
        h2 {
            text-align: center;
            font-weight: 700;
        }

        h1 {
            font-size: 2.5rem;
            color: #e63946;
            margin: 20px 0;
        }

        section {
            margin: 20px auto;
            max-width: 90%;
            background: #282a36;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }

        .section-title {
            border-bottom: 2px solid #444;
            font-size: 1.5rem;
            margin-bottom: 15px;
        }

        .count {
            font-size: 1.2rem;
            color: #8be9fd;
            margin-bottom: 20px;
        }

        /* Таблицы */
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        th,
        td {
            padding: 15px;
            text-align: left;
        }

        th {
            background: #44475a;
            color: #50fa7b;
            font-size: 1.1rem;
        }

        td {
            background: #282a36;
            border-bottom: 1px solid #444;
        }

        tr:nth-child(even) td {
            background: #353646;
        }

        /* Hover эффекты */
        tr:hover td {
            background: #6272a4;
            color: #f4f4f4;
        }

        /* Кнопки */
        button {
            display: inline-block;
            background: #50fa7b;
            color: #282a36;
            padding: 10px 20px;
            margin: 20px 0;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        button:hover {
            background: #8be9fd;
        }

        /* Адаптивность */
        @media (max-width: 768px) {
            body {
                font-size: 0.9rem;
            }

            h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>

<body>
    <h1>Анализ Логов</h1>

    <section>
        <h2 class="section-title">404 Ответы</h2>
        <div class="count">Всего: <strong>
                <%= notFoundCount %>
            </strong></div>
        <table>
            <thead>
                <tr>
                    <th>Дата и Время</th>
                    <th>Метод</th>
                    <th>URL</th>
                    <th>Статус</th>
                    <th>Размер</th>
                    <th>Реферер</th>
                    <th>User-Agent</th>
                </tr>
            </thead>
            <tbody>
                <% notFoundEntries.forEach(entry=> { %>
                    <tr>
                        <td>
                            <%= entry.datetime %>
                        </td>
                        <td>
                            <%= entry.method %>
                        </td>
                        <td>
                            <%= entry.url %>
                        </td>
                        <td>
                            <%= entry.statusCode %>
                        </td>
                        <td>
                            <%= entry.size %>
                        </td>
                        <td>
                            <%= entry.referrer || '—' %>
                        </td>
                        <td>
                            <%= entry.userAgent || '—' %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </section>

    <section>
        <h2 class="section-title">User-Agent</h2>
        <div class="count">Уникальных: <strong>
                <%= userAgentCount %>
            </strong></div>
        <table>
            <thead>
                <tr>
                    <th>Количество</th>
                    <th>User-Agent</th>
                </tr>
            </thead>
            <tbody>
                <% userAgents.forEach(ua=> { %>
                    <tr>
                        <td>
                            <%= ua.count %>
                        </td>
                        <td>
                            <%= ua.ua %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </section>

    <section>
        <h2 class="section-title">POST Запросы</h2>
        <div class="count">Всего: <strong>
                <%= postCount %>
            </strong></div>
        <table>
            <thead>
                <tr>
                    <th>Дата и Время</th>
                    <th>Метод</th>
                    <th>URL</th>
                    <th>Статус</th>
                    <th>Размер</th>
                    <th>Реферер</th>
                    <th>User-Agent</th>
                </tr>
            </thead>
            <tbody>
                <% postEntries.forEach(entry=> { %>
                    <tr>
                        <td>
                            <%= entry.datetime %>
                        </td>
                        <td>
                            <%= entry.method %>
                        </td>
                        <td>
                            <%= entry.url %>
                        </td>
                        <td>
                            <%= entry.statusCode %>
                        </td>
                        <td>
                            <%= entry.size %>
                        </td>
                        <td>
                            <%= entry.referrer || '—' %>
                        </td>
                        <td>
                            <%= entry.userAgent || '—' %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </section>
</body>

</html>